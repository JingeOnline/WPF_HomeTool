<Page x:Class="WPF_HomeTool.Views.ZipPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_HomeTool.Views"
      xmlns:helpers="clr-namespace:WPF_HomeTool.Helpers"
      xmlns:controls="clr-namespace:WPF_HomeTool.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ZipPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <controls:PageHeader  Grid.Row="0" Title="Files Zipper"  Description="批量压缩工具"/>
        <Border Grid.Row="1" Style="{StaticResource MenuBorder}">
            <Menu>
                <MenuItem Header="添加" Command="{Binding VM.AddFilesCommand}">
                    <MenuItem.Icon>
                        <ContentPresenter ContentTemplate="{StaticResource IconAdd}" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="删除" Command="{Binding VM.RemoveFilesCommand}" 
                              CommandParameter="{Binding ElementName=DataGrid_FileInfo}">
                    <MenuItem.Icon>
                        <ContentPresenter ContentTemplate="{StaticResource IconRemove}" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="清空" Command="{Binding VM.ClearFilesCommand}">
                    <MenuItem.Icon>
                        <ContentPresenter ContentTemplate="{StaticResource IconClear}" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="执行" Command="{Binding VM.StartZipCommand}">
                    <MenuItem.Icon>
                        <ContentPresenter ContentTemplate="{StaticResource IconZip}" />
                    </MenuItem.Icon>
                </MenuItem>
            </Menu>
        </Border>
        <Grid Grid.Row="2" Margin="0,16,0,8"
              AllowDrop="True" 
              helpers:FileDragDropHelper.IsFileDragDropEnabled="True" 
              helpers:FileDragDropHelper.FileDragDropTarget="{Binding VM}">
            <DataGrid ItemsSource="{Binding VM.FolderZipModelCollection}" AutoGenerateColumns="False" >
                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Folder Name" Binding="{Binding FolderName}" />
                    <DataGridTextColumn Header="Files Count" Binding="{Binding FolderFilesCount}"/>
                    <DataGridTextColumn Header="Size Readable" Binding="{Binding FolderRawSizeReadable}"/>
                    <DataGridTextColumn Header="Zip Readable" Binding="{Binding FolderZipSizeReadable}"/>
                    <DataGridTextColumn Header="Zip File" Binding="{Binding ZipFilePath}"/>
                    
                    <DataGridTemplateColumn Header="Progress" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ProgressBar Value="{Binding Progress}" Minimum="0" Maximum="100" Height="18" Margin="4" >
                                    <ProgressBar.Style>
                                        <Style TargetType="ProgressBar">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Progress}" Value="100">
                                                    <Setter Property="Foreground" Value="Green" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ProgressBar.Style>
                                </ProgressBar>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
