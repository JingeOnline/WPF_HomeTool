<Page x:Class="WPF_HomeTool.Views.ZipPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_HomeTool.Views"
      xmlns:helpers="clr-namespace:WPF_HomeTool.Helpers"
      xmlns:controls="clr-namespace:WPF_HomeTool.Controls"
      xmlns:converters="clr-namespace:WPF_HomeTool.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ZipPage">
    <Page.Resources>
        <converters:StringEqualsConverter x:Key="StringEqualsConverter"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <controls:PageHeader  Grid.Row="0" Title="Files Zipper"  Description="批量压缩工具"/>
        <Border Grid.Row="1" Style="{StaticResource MenuBorder}">
            <Menu>
                <MenuItem Header="添加" Command="{Binding VM.AddFoldersCommand}">
                    <MenuItem.Icon>
                        <ContentPresenter ContentTemplate="{StaticResource IconAdd}" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="删除" Command="{Binding VM.RemoveFolderZipModelCommand}">
                    <MenuItem.Icon>
                        <ContentPresenter ContentTemplate="{StaticResource IconRemove}" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="清空" Command="{Binding VM.ClearCollectionCommand}">
                    <MenuItem.Icon>
                        <ContentPresenter ContentTemplate="{StaticResource IconClear}" />
                    </MenuItem.Icon>
                </MenuItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="压缩级别 " VerticalAlignment="Center"/>
                    <ComboBox Width="160" ItemsSource="{Binding VM.CompressionLevels}" SelectedItem="{Binding VM.UserSelectedCompressionLevel}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="预设输出目录 " VerticalAlignment="Center"/>
                    <ComboBox Width="280" ItemsSource="{Binding VM.OutputFolderCollection}"
                              SelectedItem="{Binding VM.SelectedOutputFolder,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                              />
                </StackPanel>

                <MenuItem Header="设置">
                    <MenuItem.Icon>
                        <ContentPresenter ContentTemplate="{StaticResource IconSetting}" />
                    </MenuItem.Icon>
                    <CheckBox Content="压缩完成后删除源文件" VerticalAlignment="Center" IsChecked="{Binding VM.IsDelteAfterZip, Mode=TwoWay}"/>
                    <CheckBox Content="压缩包内含原始文件夹" VerticalAlignment="Center" IsChecked="{Binding VM.IsContainOrigionalFolderInZip, Mode=TwoWay}"/>
                    <Button Content="自定义Zip文件输出目录" VerticalAlignment="Center" Command="{Binding VM.UserSelectOutputDirectoryCommand}"/>
                    <!--<CheckBox Content="压缩文件输出到父级文件夹" VerticalAlignment="Center" IsChecked="{Binding VM.IsOutputToParentFolder, Mode=TwoWay}"/>

                    <ItemsControl ItemsSource="{Binding VM.OutputFolderCollection}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <RadioButton Content="{Binding}" GroupName="StringRadioGroup" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>-->
                </MenuItem>
                <MenuItem Header="执行" Command="{Binding VM.StartZipCommand}">
                    <MenuItem.Icon>
                        <ContentPresenter ContentTemplate="{StaticResource IconZip}" />
                    </MenuItem.Icon>
                </MenuItem>
            </Menu>
        </Border>
        <Grid Grid.Row="2" Margin="0,16,0,8"
              AllowDrop="True" 
              helpers:FileDragDropHelper.IsFileDragDropEnabled="True" 
              helpers:FileDragDropHelper.FileDragDropTarget="{Binding VM}">
            <DataGrid ItemsSource="{Binding VM.FolderZipModelCollection}" AutoGenerateColumns="False" 
                      SelectedItem="{Binding VM.UserSelectedFolderZipModel,Mode=TwoWay}">
                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Folder Name" Binding="{Binding FolderName}" Width="*"/>
                    <DataGridTextColumn Header="Files Count" Binding="{Binding FolderFilesCount}" Width="*"/>
                    <DataGridTextColumn Header="Size Readable" Binding="{Binding FolderRawSizeReadable}" Width="*"/>
                    <DataGridTextColumn Header="Zip Readable" Binding="{Binding FolderZipSizeReadable}" Width="*"/>
                    <DataGridTextColumn Header="Zip File" Binding="{Binding ZipFilePath}" Width="3*"/>
                    <DataGridTemplateColumn Header="Progress" Width="5*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ProgressBar Value="{Binding Progress}" Minimum="0" Maximum="100" Height="18" Margin="4" >
                                    <ProgressBar.Style>
                                        <Style TargetType="ProgressBar">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Progress}" Value="100">
                                                    <Setter Property="Foreground" Value="Green" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ProgressBar.Style>
                                </ProgressBar>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
