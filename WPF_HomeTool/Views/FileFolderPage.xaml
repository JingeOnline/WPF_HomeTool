<Page x:Class="WPF_HomeTool.Views.FileFolderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_HomeTool.Views"
      xmlns:controls="clr-namespace:WPF_HomeTool.Controls"
      xmlns:helpers="clr-namespace:WPF_HomeTool.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FileFolderPage">

    <Page.Resources>
        <TextBlock x:Key="IconAdd" Text="&#xECC8;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" />
        <TextBlock x:Key="IconRemove" Text="&#xECC9;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" />
        <TextBlock x:Key="IconClear" Text="&#xE894;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" />
        <TextBlock x:Key="IconPreview" Text="&#xF19D;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" />
        <TextBlock x:Key="IconSave" Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" />
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <controls:PageHeader
            Grid.Row="0"
            Title="File And Folder Tools"
            Description="文件和文件夹管理工具集"/>
        <Border Grid.Row="1" 
                Background="{DynamicResource ExpanderHeaderBackground}" 
                BorderBrush="{DynamicResource ExpanderHeaderBorderBrush}" 
                BorderThickness="{StaticResource ExpanderBorderThemeThickness}" 
                CornerRadius="{DynamicResource ControlCornerRadius}">
                <!--Padding="{StaticResource ExpanderPadding}"--> 
            <Menu >
                <ComboBox Width="200" Margin="0" Padding="0" SelectedValuePath="Content"
                          SelectedValue="{Binding VM.SelectedMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBoxItem Content="照片视频添加日期" IsSelected="True"/>
                    <ComboBoxItem Content="文件移动"/>
                    <ComboBoxItem Content="文件压缩"/>
                </ComboBox>
                <Separator/>
                <MenuItem Header="添加" Icon="{StaticResource IconAdd}" Command="{Binding VM.AddFilesCommand}"/>
                <MenuItem Header="删除" Icon="{StaticResource IconRemove}" Command="{Binding VM.RemoveFilesCommand}" CommandParameter="{Binding ElementName=DataGrid_FileInfo,Path=SelectedItems}"/>
                <MenuItem Header="清空" Icon="{StaticResource IconClear}" Command="{Binding VM.ClearFilesCommand}"/>
                <Separator/>
                <MenuItem Header="预览" Icon="{StaticResource IconPreview}" Command="{Binding VM.PreviewCommand}"/>
                <MenuItem Header="执行" Icon="{StaticResource IconSave}"/>
                <!--<Button Content="执行"/>-->
            </Menu>
        </Border>
        <Grid Grid.Row="2" Margin="0,16,0,8"
              AllowDrop="True" 
              helpers:FileDragDropHelper.IsFileDragDropEnabled="True" 
              helpers:FileDragDropHelper.FileDragDropTarget="{Binding VM}">
            <DataGrid x:Name="DataGrid_FileInfo" ItemsSource="{Binding VM.Files}" 
                      AutoGenerateColumns="False" IsReadOnly="True" CanUserSortColumns="True">
                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding FileInfo.Name}" />
                    <DataGridTextColumn Header="Size(Byte)" Binding="{Binding FileInfo.Length}"/>
                    <DataGridTextColumn Header="Size Readable" Binding="{Binding SizeReadable}"/>
                    <DataGridTextColumn Header="Extension" Binding="{Binding FileInfo.Extension}"/>
                    <DataGridTextColumn Header="Creation" Binding="{Binding FileInfo.CreationTime, ConverterCulture='zh-CN'}"/>
                    <DataGridTextColumn Header="Last Write" Binding="{Binding FileInfo.LastWriteTime, ConverterCulture='zh-CN'}"/>
                    <DataGridTextColumn Header="Name Preview" Binding="{Binding NamePreview}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!--<ColumnDefinition Width="auto"/>-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--<TextBlock Text="{Binding VM.FilesCount,Mode=OneWay,StringFormat='Files Count: {0}'}" Grid.Column="0"/>-->
            <TextBlock Text="{Binding VM.FilesCount,Mode=OneWay}" Grid.Column="0"/>
            <!--<TextBlock Text="状态" HorizontalAlignment="Center" Grid.Column="1"/>-->
            <TextBlock Text="{Binding VM.Hint,Mode=OneWay}" HorizontalAlignment="Right" Grid.Column="2"/>
        </Grid>
    </Grid>
</Page>
