<Page x:Class="WPF_HomeTool.Views.FilesRenamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_HomeTool.Views"
      xmlns:controls="clr-namespace:WPF_HomeTool.Controls"
      xmlns:helpers="clr-namespace:WPF_HomeTool.Helpers"
      xmlns:behaviros="clr-namespace:WPF_HomeTool.Behaviors"
      xmlns:converters="clr-namespace:WPF_HomeTool.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FilesRenamePage">
    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <controls:PageHeader
            Grid.Row="0"
            Title="Files Rename"
            Description="文件重命名工具集"/>
        <Border Grid.Row="1" Style="{StaticResource MenuBorder}">
            <StackPanel Orientation="Vertical">
                <Menu >
                    <ComboBox Width="200" Margin="0" Padding="0" SelectedValuePath="Content"
              SelectedValue="{Binding VM.SelectedMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
              behaviros:ComboBoxSelectionChangedBehavior.Command="{Binding VM.SelectedModeChangedCommand}">
                        <ComboBoxItem Content="照片视频添加日期" IsSelected="True"/>
                        <ComboBoxItem Content="指定位置插入文字"/>
                        <ComboBoxItem Content="删除和替换文字"/>
                    </ComboBox>
                    <Separator/>
                    <MenuItem Header="添加" Command="{Binding VM.AddFilesCommand}">
                        <MenuItem.Icon>
                            <ContentPresenter ContentTemplate="{StaticResource IconAdd}" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="删除" Command="{Binding VM.RemoveFilesCommand}" CommandParameter="{Binding ElementName=DataGrid_FileInfo,Path=SelectedItems}">
                        <MenuItem.Icon>
                            <ContentPresenter ContentTemplate="{StaticResource IconRemove}" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="清空" Command="{Binding VM.ClearFilesCommand}">
                        <MenuItem.Icon>
                            <ContentPresenter ContentTemplate="{StaticResource IconClear}" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="预览" Command="{Binding VM.PreviewCommand}" IsEnabled="{Binding VM.IsPreviewButtonEnable,Mode=OneWay}">
                        <MenuItem.Icon>
                            <ContentPresenter ContentTemplate="{StaticResource IconPreview}" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="撤销" Command="{Binding VM.ReversePreviewCommand}" IsEnabled="{Binding VM.IsPreviewButtonEnable,Mode=OneWay}">
                        <MenuItem.Icon>
                            <ContentPresenter ContentTemplate="{StaticResource IconReverse}" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="执行" Command="{Binding VM.SaveCommand}" IsEnabled="{Binding VM.IsSaveButtonEnable,Mode=OneWay}">
                        <MenuItem.Icon>
                            <ContentPresenter ContentTemplate="{StaticResource IconSave}" />
                        </MenuItem.Icon>
                    </MenuItem>
                </Menu>
                <GroupBox Margin="8" Padding="8,0" Header="添加前缀或后缀" 
                          Visibility="{Binding VM.IsAppendTextPanelVisiable,Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal" >
                        <Grid Width="72">
                            <RadioButton Content="开头" GroupName="AppendHeadOrTail" VerticalAlignment="Center"
                                         Command="{Binding VM.AppendPositionSelectedCommand}" CommandParameter="Head"/>
                        </Grid>
                        <Grid Width="72">
                            <RadioButton Content="末尾" GroupName="AppendHeadOrTail" VerticalAlignment="Center" 
                                         Command="{Binding VM.AppendPositionSelectedCommand}" CommandParameter="End"/>
                        </Grid>
                        <RadioButton GroupName="AppendHeadOrTail" VerticalAlignment="Center" VerticalContentAlignment="Center" Padding="0"
                                     Command="{Binding VM.AppendPositionSelectedCommand}" CommandParameter="Index">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="自定义位置" VerticalAlignment="Center" Margin="8"/>
                                <TextBox Width="80" VerticalAlignment="Center" x:Name="AppendIndexTextBox" 
                                         Text="{Binding VM.AppendPositionIndex,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </RadioButton>
                        <TextBlock Text="请输入插入文字：" VerticalAlignment="Center" Margin="20,0,0,0"
                                   ToolTip="所在文件夹 -> $folder$"/>
                        <TextBox Margin="16,0,0,0" Width="240" Text="{Binding VM.AppendText,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2" Margin="0,16,0,8"
              AllowDrop="True" 
              helpers:FileDragDropHelper.IsFileDragDropEnabled="True" 
              helpers:FileDragDropHelper.FileDragDropTarget="{Binding VM}">
            <DataGrid x:Name="DataGrid_FileInfo" ItemsSource="{Binding VM.Files}" 
                      AutoGenerateColumns="False" IsReadOnly="True" CanUserSortColumns="True">
                <DataGrid.Resources>
                    <Style TargetType="DataGridCell">
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding FileInfo.Name}" />
                    <DataGridTextColumn Header="Size(Byte)" Binding="{Binding FileInfo.Length}"/>
                    <DataGridTextColumn Header="Size Readable" Binding="{Binding SizeReadable}"/>
                    <DataGridTextColumn Header="Extension" Binding="{Binding FileInfo.Extension}"/>
                    <DataGridTextColumn Header="Creation" Binding="{Binding FileInfo.CreationTime, ConverterCulture='zh-CN'}"/>
                    <DataGridTextColumn Header="Last Write" Binding="{Binding FileInfo.LastWriteTime, ConverterCulture='zh-CN'}"/>
                    <DataGridTextColumn Header="Name Preview" Binding="{Binding NamePreview}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!--<ColumnDefinition Width="auto"/>-->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--<TextBlock Text="{Binding VM.FilesCount,Mode=OneWay,StringFormat='Files Count: {0}'}" Grid.Column="0"/>-->
            <TextBlock Text="{Binding VM.FilesCount,Mode=OneWay}" Grid.Column="0"/>
            <!--<TextBlock Text="状态" HorizontalAlignment="Center" Grid.Column="1"/>-->
            <TextBlock Text="{Binding VM.Hint,Mode=OneWay}" HorizontalAlignment="Right" Grid.Column="2"/>
        </Grid>
    </Grid>
</Page>
